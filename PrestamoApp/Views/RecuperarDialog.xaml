<Window x:Class="PrestamoApp.Views.RecuperarDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recuperar Contraseña"
        Height="235" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="White" CornerRadius="10" BorderBrush="#BDC3C7" BorderThickness="1" Padding="20">
        <StackPanel Margin="0,0,0,8">
            <TextBlock Text="Recuperar Contraseña"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,10"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Ingrese su correo electrónico:"
                       FontSize="14"
                       Margin="0,0,0,5"/>

            <!-- TextBox redondeado y más alto -->
            <Border CornerRadius="8" BorderBrush="#BDC3C7" BorderThickness="1" Margin="0,0,0,10" Background="White">
                <TextBox x:Name="txtCorreo" Height="41" Padding="10" BorderThickness="0" FontSize="14" />
            </Border>

            <!-- Botones centrados y redondeados -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0" >
                <Button Content="Cancelar"
                        Width="100"
                        Height="45"
                        Background="#e74c3c"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="0,0,15,0"
                        Cursor="Hand"
                        FontSize="14"
                        Click="Cancelar_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    Padding="0" >
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Recuperar"
                        Width="100"
                        Height="45"
                        Background="#2980b9"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="14"
                        Click="Recuperar_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="8" 
                                    Padding="0" >
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
